#!/bin/bash

ctrl_c () {
  echo -e "\n[!] Exiting..."
  exit 1
}
trap ctrl_c INT

if [[ $(echo $PWD | sed -ne 's/^.*pingu//p') != "/assets/tools" ]]; then
  echo -e "\n[!] Run from: pingu/assets/tools\n    Usage: ./configure"
fi
sudo cat /dev/null

cat ../pkgs/arch/0-basic_pkgs | xargs pacman -Sy --noconfirm
clear
bash ./version-check
